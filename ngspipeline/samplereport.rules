        if panel is None:
            sangers = MR.get_sanger_fragments(pakket)
        else:
            sangers = MR.get_sanger_fragments(panel)

        if os.path.isfile(STANDAARDFRAGMENTEN):
            df_serie = standaardfragmenten_naar_df(STANDAARDFRAGMENTEN)
            standaard = standaardfragmenten_dict_sample(sample, df_serie)
            fragmentlist = get_fragment_list(standaard)
            standaard_merged = merge_standaardfrags(fragmentlist)

        else:
            standaard_merged = dict()
        
        if 'Geen sangers:' in sangers:
