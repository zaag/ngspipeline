            ws4.set_column('B:F', 10)
            ws4.set_column('G:G', 11)
            ws4.set_column('H:H', 22)
            ws4.set_column('I:I', 4)
            ws4.set_column('J:J', 19)
            ws4.set_column('K:K', 9)

            ws4.set_column('A:A', 25)
            ws4.set_column('G:G', 18)
            ws4.set_column('I:I', 18)

